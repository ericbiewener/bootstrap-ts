{
  "name": "bootstrap-ts",
  "version": "0.0.1",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": "https://github.com/ericbiewener/bootsrap-ts",
  "author": "Eric Biewener <ebiewener@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "tsc",
    "start": "ts-node src/main.ts",
    "debug": "ts-node --nolazy --inspect-brk=9229 src/main.ts",
    "prettier": "prettier --write \"**/*.{ts,tsx,js}\"",
    "eslint": "eslint --fix --ext .ts,.tsx ./src",
    "test": "jest",
    "test:watch": "yarn run test --watch"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "babel-jest": "25.1.0",
    "eslint": "6.8.0",
    "eslint-config-ericbiewener-typescript": "5.11.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.9",
    "prettier": "2.0.2",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "lint-staged": {
    "**/*.{json,yml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,gql}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
