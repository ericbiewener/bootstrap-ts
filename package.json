{
  "name": "bootstrap-ts",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/ericbiewener/bootsrap-ts",
  "author": "Eric Biewener <ebiewener@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "tsc",
    "start": "node dist/index.js",
    "debug": "tsc && node --nolazy --inspect-brk=9229 dist/index.js",
    "prettier": "prettier --write \"**/*.{ts,tsx,js}\"",
    "eslint": "eslint --fix --ext .ts,.tsx ./src",
    "test": "jest",
    "test:watch": "yarn run test --watch"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-typescript": "7.7.2",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.7",
    "babel-jest": "24.9.0",
    "eslint": "6.6.0",
    "eslint-config-ericbiewener-typescript": "5.3.2",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "prettier": "1.19.1",
    "typescript": "3.7.2"
  },
  "lint-staged": {
    "**/*.{json,yml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,gql}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
